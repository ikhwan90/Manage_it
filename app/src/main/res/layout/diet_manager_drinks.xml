                    android:scaleType="fitXY"
                    android:src="@drawable/diet_manager_lemonwater" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:background="@color/purpleBg"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:text="@string/Melon_Detox_Water"
                    android:textSize="15dp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/drink8"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_below="@id/drink7"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageButton
                    android:id="@+id/d8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@color/purpleBg"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:src="@drawable/diet_manager_tea" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:background="@color/purpleBg"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:text="@string/Green_Tea_Detox"
                    android:textSize="15dp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/drink9"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_below="@id/drink8"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageButton
                    android:id="@+id/d9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@color/purpleBg"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:src="@drawable/diet_manager_crazy" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:background="@color/purpleBg"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:text="@string/Super_Belly_Fat_Cutter"
